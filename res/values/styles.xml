<?xml version="1.0" encoding="UTF-8"?>
<resources>

	<style name="CustomTheme" parent="android:Theme">
		<item name="android:windowTitleSize">54px</item>
		<item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>	
		<item name="android:windowBackground">@color/custom_theme_color</item>
    	<item name="android:colorBackground">@color/custom_theme_color</item>	    		
	</style>
	
    <style name="WindowTitleBackground" parent="android:WindowTitleBackground">    
        <item name="android:background">@android:color/transparent</item>        
    </style>    
    
    <style name="ListStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
       
    </style>
    
     <style name="ListItem">
    	<item name="android:background">@drawable/list_item_background</item>
    </style>
    
     <style name="ListItemLabel">
    	<item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    
</resources>